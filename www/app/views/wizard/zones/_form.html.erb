<div id="add-form">
  <div>
    <% @empty_zone = Zone.new %>
    <%= form_for @empty_zone, :url => wizard_zones_path, :remote => true do |f| %>
      <%= f.hidden_field(:old_name) %>
      <table>
        <tr>
          <th><%= f.label :name, 'Nazwa strefy' %></th>
          <td><%= f.text_field(:name) %></td>
        </tr>
        <tr>
          <th><%= f.label :type, 'Typ strefy' %></th>
          <td><%= f.select(:type, options_for_select(['', 'WAN', 'DMZ', 'LAN', 'WIFI']), {}, {:class => 'type'}) %></td>
        </tr>
        <tr>
          <th><%= f.label :method, 'Metoda adresacji' %></th>
          <td><%= f.select(:method, options_for_select(['DHCP', 'STATIC']), {}, {:class => 'method'}) %></td>
        </tr>
        <tr>
          <th><%= f.label :address, 'IP' %></th>
          <td><%= f.text_field :address, :'data-disable-on' => 'method-dhcp', :readonly => @empty_zone.method_dhcp? %></td>
        </tr>
        <tr>
          <th><%= f.label :netmask, 'Maska' %></th>
          <td><%= f.text_field :netmask, :'data-disable-on' => 'method-dhcp', :readonly => @empty_zone.method_dhcp? %></td>
        </tr>
        <tr>
          <th><%= f.label :gateway, 'Gateway' %></th>
          <td><%= f.text_field :gateway, :'data-disable-on' => 'method-dhcp method-static-lan', :readonly => !@empty_zone.static_wan? %></td>
        </tr>
        <tr>
          <th><%= f.label :dns_nameservers, 'DNS' %></th>
          <td><%= f.text_field :dns_nameservers, :'data-disable-on' => 'method-dhcp method-static-lan', :readonly => !@empty_zone.static_wan? %></td>
        </tr>
        <tr>
          <th><%= f.label :interface, 'Interface' %></th>
          <td><%= f.select(:interface, options_for_select(Interface.all.map(&:name)), {}, {:class => 'interface'}) %></td>
        </tr>
      </table>

      <%= submit_tag %>
    <% end %>
  </div>
</div>
