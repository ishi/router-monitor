<%= form_for(@statistic_value) do |f| %>
	<% if @statistic_value.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@statistic_value.errors.count, "error") %> prohibited this statistic_value from being saved:</h2>

			<ul>
				<% @statistic_value.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :print_name, 'Wyświetlana nazwa' %><br />
		<%= f.text_field :print_name %>
	</div>
	<% if @statistic_value.new_record? -%>
		<div class="field">
			<%= f.label :name, 'Nazwa zmiennej' %><br />
			<%= f.text_field :name %>
		</div>
	<% end -%>
	<div class="field">
		<%= f.label :interval, 'Interwał' %><br />
		<%= f.number_field :interval, :disabled => !@statistic_value.new_record? %>
	</div>
	<div class="field">
		<%= f.label :script, 'Skrypt pobierający dane' %><br />
		<%= f.text_area :script %>
	</div>
	<div class="actions">
		<%= f.submit 'Zapisz' %>
	</div>
<% end %>
