<!DOCTYPE html>
<html>
	<head>
		<title>RouterMonitor</title>
		<%= stylesheet_link_tag    "application" %>
		<%= stylesheet_link_tag    "/assets/cupertino/jquery-ui.css" %>
		<%= stylesheet_link_tag    "/assets/jquery-config-editor.css" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag "/assets/mclexer.js" %>
		<%= javascript_include_tag "/assets/jquery-config-editor.js" %>
		<%= csrf_meta_tags %>
		<script >
			$(function() {
				$('.button').button();
			});

		</script>
	</head>
	<body class="<%= controller.controller_name -%>">
		<% if flash[:notice] %>
      		<p class="notice"><%= flash[:notice] %></p>
    	<% end %>
    	<% if flash[:error] %>
      		<p class="error"><%= flash[:error] %></p>
    	<% end %>
    	<% if flash[:alert] %>
      		<p class="error"><%= flash[:alert] %></p>
    	<% end %>
		<div id="menu" class="ui-accordion ui-widget ui-helper-reset ui-accordion-icons">
			<h3 class="ui-accordion-header ui-helper-reset ui-state-active ui-corner-all ui-state-focus">
				<span class="ui-icon ui-icon-triangle-1-e"></span>
				<a href="/">Dashboard</a>
			</h3>
			
			<h3 class="ui-accordion-header ui-helper-reset ui-state-active ui-corner-top ui-state-focus">
				<span class="ui-icon ui-icon-triangle-1-s"></span>
				<a href="#">Ustawienia Systemu</a>
			</h3>
			<div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion-content-active" 
					style="display: block; height: 72px; padding-top: 2px; padding-bottom: 2px; overflow-x: auto; overflow-y: auto; ">
				
			</div>
			
			<h3 class="ui-accordion-header ui-helper-reset ui-state-active ui-corner-top ui-state-focus">
				<span class="ui-icon ui-icon-triangle-1-s"></span>
				<a href="#">Ustawienia Sieci</a>
			</h3>
			<div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion-content-active" 
					style="display: block; height: 72px; padding-top: 2px; padding-bottom: 2px; overflow-x: auto; overflow-y: auto; ">
				<ul>
					<li>
						<%= link_to "Interfejsy Sieciowe", edit_editor_path(:interfaces) %>
					</li>
				</ul>
			</div>
			<h3 class="ui-accordion-header ui-helper-reset ui-state-active ui-corner-top ui-state-focus">
				<span class="ui-icon ui-icon-triangle-1-s"></span>
				<%= link_to "Statystyki", statistics_path %>
			</h3>
			<div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion-content-active" 
					style="display: block; height: 72px; padding-top: 2px; padding-bottom: 2px; overflow-x: auto; overflow-y: auto; ">
				<ul>
					<li>
						<%= link_to "Generacja wykresów", statistics_path %>
					</li>
					<li>
						<%= link_to "Lista itemów", statistic_values_path %>
					</li>
					<li>
						<%= link_to "Dodaj nowy item", new_statistic_value_path %>
					</li>
					<!--li>
						<%= link_to "Logi skryptów", statistics_log_path %>
					</li-->
				</ul>
			</div>
		</div>
		</div>
		
		<div id="page-content" class="ui-helper-clearfix">
			<%= yield %>
		</div>
	</body>
</html>